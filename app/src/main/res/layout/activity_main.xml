<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:layout_marginBottom="@dimen/margin_bottom_toolbar_main"
        app:title="@string/title_playlist_maker"
        app:titleTextAppearance="@style/MainToolbarTitleText" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/padding_main"
        android:layout_marginEnd="@dimen/padding_main"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/button_search_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/padding_main"
        android:layout_marginEnd="@dimen/padding_main"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/button_media_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/media_icon"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/padding_main"
        android:layout_marginEnd="@dimen/padding_main"
        android:layout_marginBottom="@dimen/padding_main"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_text_medium"
        android:text="@string/button_settings_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/black" />

</LinearLayout>