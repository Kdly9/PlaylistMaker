<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:layout_marginBottom="@dimen/margin_bottom_toolbar_main"
        app:title="@string/title_playlist_maker"
        app:titleTextAppearance="@style/MainToolbarTitleText" />

    <Button
        android:id="@+id/search"
        style="@style/MainButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/button_search_text"
        app:icon="@drawable/search_icon" />

    <Button
        android:id="@+id/media"
        style="@style/MainButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/button_media_text"
        app:icon="@drawable/media_icon" />

    <Button
        android:id="@+id/settings"
        style="@style/MainButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/padding_main"
        android:text="@string/button_settings_text"
        app:icon="@drawable/settings_icon" />

</LinearLayout>